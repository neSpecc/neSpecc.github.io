/**
 * Styles for Graphon charts module
 * @author Peter Savchenko <specc.dev@gmail.com>
 */
@import "variables.pcss";
@import "ui-elements.pcss";
@import "components/chart.pcss";
@import "components/header.pcss";
@import "components/legend.pcss";
@import "components/minimap.pcss";

/**
 * @todo refactor styles below
 */

.tg-chart g,
.tg-minimap g {
    transform-origin: bottom left;
    will-change: transform;
}

.tg-chart .oy-group,
.tg-minimap .oy-group {
    transition: transform 300ms ease;
    will-change: transform;
    shape-rendering: optimizespeed;
}

.tg-chart path.scaled {
    transition: transform 400ms ease, opacity 300ms ease;
    will-change: transform, opacity;
}

.tg-chart path,
.tg-minimap path {
    transform-origin: bottom left;
    transition: opacity 300ms ease;
    will-change: opacity;
    shape-rendering: optimizespeed;
}

.tg-chart--line path {
    shape-rendering: geometricprecision;
}

.tg-chart .tg-graph--hidden,
.tg-minimap .tg-graph--hidden {
    opacity: 0;
}


/**
 * Bar
 */

.tg-bar {
    will-change: opacity, transform;
    transition: opacity 350ms ease, transform 300ms ease;
}

.tg-bar--hidden {
    /*display: none;*/
    opacity: 0;
}

.tg-chart .tg-bar--hidden {
    transform: matrix(1, 0, 0, 0.1, 0, 50);
}

.tg-minimap .tg-bar {
    transition: none !important;
}

.tg-bar rect {
    /*transition: height 300ms ease;*/
    will-change: height, y;
    shape-rendering: optimizespeed;
}

.tg-chart__overlays {
    will-change: opacity;
    transition: opacity 250ms ease;
}

.tg-chart__overlay-left,
.tg-chart__overlay-right {
    fill: #fff;
    opacity: 0.5;
    will-change: width, x;
}

/**
 * Area
 */
.tg-area {
    will-change: opacity, transform !important;
    transition: all 170ms ease !important;
}

.tg-area--hidden {
    /*opacity: 0 !important;*/
    transform: scaleY(0) !important;
}



/**
 * Footer with dates
 * ----------------------------
 */
.tg-chart footer {
    margin-top: 10px;
    margin-left: 15px;
    height: 18px;
    color: var(--color-gray);
    font-size: 12px;
    font-family: Roboto, 'Helvetica Neue', -apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,sans-serif;
    /*display: flex;*/
    /*justify-content: space-between;*/
    position: relative;
    /*margin-left: -26px;*/
}

.tg-chart time {
    position: absolute;
    display: block;
    white-space: nowrap;
    transition: opacity 250ms ease;
    will-change: opacity, transform;

    animation: fade-in 250ms ease;
}

@keyframes fade-in {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.tg-chart time.hided {
    opacity: 0;
}


/**
* Pointer: a line below the Tooltip
* --------------------------------
*/
.tg-pointer {
    position: absolute;
    top: 0;
    left: 0;
    height: 350px;
    opacity: 0;
    /*transition: opacity 150ms ease, left 50ms ease;*/
    will-change: opacity, left;
}

.tg-pointer--showed {
    opacity: 1;
}

.tg-pointer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    width: 1px;
    background: rgba(170,181,191,0.33);
}

.tg-chart--area .tg-pointer::before {
    background-color: rgba(255, 255, 255, 0.2);
}

.tg-pointer__pointer {
    display: inline-block;
    width: 10px;
    height: 10px;
    border: 3px solid #1f2938;
    background: #fff;
    border-radius: 50%;
    position: absolute;
    left: -5px;
    bottom: 0;
    margin-bottom: -5px;
    box-sizing: border-box;
    z-index: 2;
    /*transition: transform 200ms ease;*/
    will-change: transform;
}

.tg-pointer__pointer--hidden {
    display: none;
}


/**
* Grid
* --------------------------------
*/
.tg-grid {
    position: absolute;
    right: 0;
    top: 0;
    left: 15px;
    height: 350px;
    color: var(--color-gray);
    font-size: 12px;
    font-family: Roboto, 'Helvetica Neue', -apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,sans-serif;
}

.tg-grid__section {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    padding-bottom: 5px;
    border-bottom: 1px solid var(--gray-line);
    transition: transform 280ms ease, opacity 350ms ease, bottom 280ms ease;
    will-change: transfrom, opacity;
}

.tg-grid__counter {
    transition: opacity 300ms ease;
    will-change: opacity;
}

.tg-grid__counter--hidden {
    opacity: 0;
}

.tg-chart--line .tg-grid__counter{
    display: inline-block;
    background: var(--color-bg);
    color: var(--color-gray);
    border-radius: 2px;
    padding: 2px 4px;
    margin: 0 -2px;
}

.tg-grid__counter--second {
    float: right;
}

.tg-grid__section--hidden {
    opacity: 0;
    transform: translateY(-50px);
}

.tg-grid__section:not(.no-animation) {
    /*animation: jump-in 200ms ease-in;*/
}

@keyframes jump-in {
    from {
        transform: translateY(-30px);
        opacity: 0;
    }

    to {
        transform: none;
        opacity: 1;
    }
}


/**
* Tooltip
* --------------------------------
*/
.tg-tooltip {
    position: absolute;
    background: rgba(255,255,255,1);
    border-radius: 10px;
    box-shadow: 0 1px 4px 0 rgba(0,0,0,0.13);
    top: 20px;
    padding: 10px 15px;
    z-index: 3;
    transition: left 300ms ease, opacity 400ms ease;
    will-change: left, opacity;
    opacity: 0;
    min-width: 140px;
    font-size: 13px;
    font-family: Roboto, 'Helvetica Neue', -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, sans-serif;
}

.tg-tooltip--showed {
    opacity: 1;
}

.tg-tooltip__title {
    display: block;
    min-height: 1.1em;
    font-weight: 500;
    white-space: nowrap;
}

.tg-tooltip__title .left {
    position: relative;
    margin-right: 5px;
    display: inline-block;
    vertical-align: top;
}

.tg-tooltip__title .left span {
    right: auto;
    left: 0;
}

.tg-tooltip__values {
    display: flex;
    flex-direction: column;
}

.tg-tooltip__values-item {
    display: flex;
    margin-top: 5px;
}

.tg-tooltip__values-item:first-of-type {
    margin-top: 7px;
}

.tg-tooltip__values-item-title {
    display: inline-block;
    padding-right: 20px;
}

.tg-tooltip .percents {
    display: inline-block;
    font-weight: 500;
    min-width: 26px;
    text-align: right;
    margin-right: 10px;
}


/*.tg-tooltip__values-item:not(:last-of-type) {*/
    /*margin-bottom: 5px;*/
/*}*/

.tg-tooltip__values-item b {
    margin-left: auto;
    white-space: nowrap;
    position: relative;
}

.counter-prev {
    position: absolute;
    animation: exit 400ms ease;
    will-change: transform, opacity;
    animation-fill-mode: forwards;
    right: 0;
    height: 1em;
}

.counter-cur {
    position: absolute;
    animation: enter 400ms ease;
    will-change: transform, opacity;
    animation-fill-mode: forwards;
    right: 0;
    height: 1em;
}

.counter-prev.top {
    animation: exitTop 300ms ease;
    animation-fill-mode: forwards;
}
.counter-cur.top {
    animation: enterTop 300ms ease;
    animation-fill-mode: forwards;
}

@keyframes exit {
    from {
        transform: none;
        opacity: 1;
    }

    to {
        transform: translate(0px, -1px) scale(1.35);
        opacity: 0;
    }
}

@keyframes enter {
    from {
        transform: scale(0.85) translateX(-2px);
        opacity: 0;
    }

    80% {
        transform: scale(1.05);
        opacity: 1;
    }

    to {
        transform: none;
    }
}


@keyframes exitTop {
    from {
        transform: none;
        opacity: 1;
    }

    to {
        transform: translate(0, -5px);
        opacity: 0;
    }
}

@keyframes enterTop {
    from {
        transform: translate(0, 5px);
        opacity: 0;
    }

    to {
        transform: none;
        opacity: 1;
    }
}





/**
 * Night mode
 * --------------------------------
 */
.tg--night-mode {
    background: #2b3037;
    color: #fff;
}

.tg--night-mode .tg-legend__item {
    border-color: #384757;
}

.tg--night-mode .tg-tooltip {
    background: #1C2533;
    color: #fff;
    box-shadow: none;
}

.tg--night-mode .tg-tooltip__title {
    color: #fff;
}

.tg--night-mode .tg-pointer__pointer {
    background: #2b3037;
}

.tg--night-mode .tg-chart__overlays rect {
    fill: #2b3037;
}

.tg--night-mode .tg-grid__section {
    border-color: var(--gray-line);
}

.tg--night-mode .tg-chart footer,
.tg--night-mode .tg-grid {
    color: var(--color-gray);
}
.tg--night-mode .all b {
    color: #fff !important;
}
